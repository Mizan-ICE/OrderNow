{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
    "ConnectionStrings": {
        "OrderNowConn": "Server=(localdb)\\MSSQLLocalDB;Database=OrderNow;Trusted_Connection=True;MultipleActiveResultSets=True;",
        
    },

    "SeriLog": {
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/web-log-.log",
                    "rollingInterval": "Day"

                }
            }
        ]
    },
  "AllowedHosts": "*"
}