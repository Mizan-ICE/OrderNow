@model OrderNow.Web.Models.ViewModel.ProductVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Update Product</h1>
    <form asp-action="Edit" asp-controller="Product" method="post">

        <div class="form-group text-center">
            <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
        </div>
        <div class="form-group">
            <label asp-for="ProductName">Product Name:</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductDescription">Product Description:</label>
            <textarea asp-for="ProductDescription" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price:</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductImageUrl">Product Image Url (Optional):</label>
            <input asp-for="ProductImageUrl" class="form-control" />
            <span asp-validation-for="ProductImageUrl" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center my-4">
            <div class="form-group">
                <label asp-for="CategoryId">Category:</label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.CategoryName</option>
                    }
                </select>
            </div>
        </div>
        <input type="hidden" asp-for="Product.Id" />
        <a class="btn btn-success" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Update product</a>
        <a href="#"
           button type="button"
           class="btn btn-danger open-delete-modal"
           data-id="@Model.Id"
           data-url="@Url.Action("Delete", "Product", new { id = Model.Id })">
            Delete product
        </a>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Add" class="btn btn-primary btn-green">Add new product</a>
        <a class="btn btn-dark" asp-controller="Product" asp-action="ProductList" class="btn btn-primary">Back to Products list</a>

        <partial name="_DeleteModalPartial" />
    </form>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var output = document.getElementById('ProfilePicturePreview');
            var imgUrl = document.getElementById('ProductImageUrl').value;

            if (imgUrl && imgUrl.trim() !== "") {
                output.src = imgUrl; // show existing image on edit
            } else {
                output.src = "/images/no-image.png"; // fallback
            }
        });

        document.getElementById('ProductImageUrl').addEventListener("input", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = this.value;
        });
    </script>
    <script>
              $(document).ready(function () {
            $('.open-delete-modal').on('click', function (e) {
                e.preventDefault(); // stop navigation
                var id = $(this).data('id');
                var url = $(this).data('url');

                $('#delete-id').val(id);
                $('#delete-form').attr('action', url);
                $('#modal-delete').modal('show');
            });

            $('#delete-button').on('click', function () {
                $('#delete-form').submit();
            });
        });
    </script>
    }
