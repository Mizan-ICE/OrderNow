@model OrderNow.Web.Models.ViewModel.CustomerVM
@{
    ViewData["Title"] = "Add";
}


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add New Customer</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="CustomerPhoto" class="control-label"></label>
                        <input asp-for="CustomerPhoto" class="form-control" />
                        <span asp-validation-for="CustomerPhoto" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between mt-1">
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                        <a class="btn btn-outline-secondary" asp-action="CustomerList">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#CustomerPhoto").val();
        })

        $("#CustomerPhoto").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
