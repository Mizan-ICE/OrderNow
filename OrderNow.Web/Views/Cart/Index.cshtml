@model OrderNow.Web.Models.ViewModel.CartItemVM
@{
    ViewData["Title"] = "Index";
}

<h3 class="my-3">
    Shopping Cart
</h3>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="text-center mb-4">
                <h2>Your Shopping Cart Summary</h2>
            </div>

            <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Amount</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th>Actions</th>
                </tr>
            </thead>
            
            <tbody>

        @foreach (var line in Model.CartItems)
        {
            <tr>
                
                <td class="align-middle">@line.Quantity</td>
                <td class="align-middle">@line.Product.ProductName</td>
                                <td >
                                    <div class="fw-bold text-dark">
                                        <span style="font-weight: 900;">৳</span>@Model.TotalPrice.ToString("N2")
                                    </div>
                                </td>
                                <td >
                                    <div class="fw-bold text-dark">
                                        <span style="font-weight: 900;">৳</span>@Model.TotalPrice.ToString("N2")
                                    </div>
                                    </td>
                <td class="align-middle">
                                    <a class="btn btn-sm btn-danger" asp-controller="Cart" asp-action="RemoveFromCart"
                       asp-route-id="@line.Product.Id">
                        <i class="bi bi-dash-circle"></i>
                    </a>
                                    <a class="btn btn-sm btn-success" asp-controller="Cart" asp-action="AddItemToCart"
                       asp-route-id="@line.Product.Id">
                        <i class="bi bi-plus-circle"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
        <tfoot class="table-light">
            <tr>
                <td colspan="2"></td>
                <td><b>Total:</b></td>
                            <td>
                                <div class="fw-bold text-danger">
                                    <span style="font-weight: 900;">৳</span>@Model.TotalPrice.ToString("N2")
                                </div>
                            </td>
                           
                <td></td>
            </tr>
        </tfoot>
        </table>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <div id="paypal-btn"></div>
        <a class="btn btn-outline-success" asp-action="CheckOut"asp-controller="Order">
                    CheckOut
        </a>
        <a class="btn btn-outline-success" asp-controller="Product" asp-action="ProductList">
            <i class="bi bi-plus-circle"></i> Add More Items
        </a>
    </div>
</div>
    </div>
</div>